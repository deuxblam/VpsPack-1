clear
cd
echo -e "\033[1;37m VpsPacket © Script criado por: \033[2;32mMatheus Larcher \033[0m"
echo -e "\033[1;37mEscolha uma das opçoẽs:    \033[1;37mPara Sair Ctrl + C\033[1;34m
[1] criar \033[2;36m(Criar usuarios para SSH e OpenVPN)\033[1;34m
[2] apagar \033[2;36m(apagar usuario)\033[1;34m
[3] detalhesusers (Mostra informações dos seus usuarios !!)\033[0m"
read -p "[1-3]: " option

if [ $option -eq 1 ]; then
bash criar
fi
if [ $option -eq 2 ]; then
bash apagar
fi
if [ $option -eq 3 ]; then
bash detalhesusers
fi
