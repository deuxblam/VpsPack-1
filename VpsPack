#!/bin/bash

if [ $(id -u) -eq 0 ]
then
        clear
else
        if echo $(id) |grep sudo > /dev/null
        then
        clear
        echo "Voce não é root"
        echo "Seu usuario esta no grupo sudo"
        echo -e "Para virar root execute \033[1;31msudo su\033[0m"
        exit
        else
        clear
        echo -e "Vc nao esta como usuario root, nem com seus direitos (sudo)\nPara virar root execute \033[1;31msu\033[0m e digite sua senha root"
        exit
        fi
fi

if [ -d /etc/VpsPackdir ]
then
echo ""
else
mkdir /etc/VpsPackdir
fi

if [ -d /etc/VpsPackdir/senha ]
then
echo ""
else
mkdir /etc/VpsPackdir/senha
fi

if [ -d /etc/VpsPackdir/limite ]
then
echo ""
else
mkdir /etc/VpsPackdir/limite
fi

if [ -d /etc/VpsPackdir/date ]
then
echo ""
else
mkdir /etc/VpsPackdir/date
fi

clear
echo -e "\033[1;37m VpsPacket © Script criado por: \033[2;32mMatheus Larcher \033[0m"
echo -e "\033[1;37mEscolha uma das opçoẽs:    \033[1;37mPara Sair Ctrl + C\033[1;34m
[1] Usercreate \033[2;36m(Criar usuarios)\033[1;34m
[2] UserRedefine \033[2;36m(Opções para mudanças no usuario)\033[1;34m
[3] firewall-block \033[2;36m(Regras iptables block torrent, icmp [RISCOS])\033[1;34m
[4] ResetFirewall \033[2;36m(Retira todas as regras iptables [RISCOS])\033[1;34m
[5] OpenVPN \033[2;36m(Instalar badVPN para encaminhamento UDP)\033[1;34m
[6] backupusers \033[2;36m(Backup dos usuarios para reinstalação futura)\033[1;34m
[7] restusers \033[2;36m(Restaurar usuarios feito backup)\033[1;34m
[8] detalhesuser \033[2;36m(Mostra informações de um unico usuarios)\033[1;34m
[9] detalhesusers \033[2;36m(Mostra informações de todos os usuarios !!)\033[1;34m
[10] banner \033[2;36m(Banner mensagem no ssh)\033[1;34m
[11] speedtest \033[2;36m(Teste de conexão [velocidade de banda])\033[1;34m
[12] systemdetalhes \033[2;36m(Detalhes sobre o Sistema)\033[1;34m
[13] Detalhes \033[2;36m(Detalhes sobre o VpsPack)\033[1;34m
[14] Atualizar \033[2;36m(Remover o VpsPack)\033[0m"
read -p ": " opcao

case $opcao in
 1)
  Usercreate;;
 2)
  UserRedefine;;
 3)
  firewall-block;;
 4)
  ResetFirewall;;
 5)
  OpenVPN;;
 6)
  backupusers;;
 7)
  read -p "Em qual diretorio esta o arquivo de Backup: " arq
  restusers $arq;;
 8)
 detalhesuser;;
 9)
  detalhesusers;;
 10)
  banner;;
 11)
  speedtest;;
 12)
  systemdetalhes;;
 13)
  Detalhes;;
 14)
  Atualizar;;
 *)
  id > /dev/null 2> /dev/null
esac
