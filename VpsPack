#!/bin/bash

if [ $(id -u) -eq 0 ]
then
        clear
else
        if echo $(id) |grep sudo > /dev/null
        then
        clear
        echo "Voce não é root"
        echo "Seu usuario esta no grupo sudo"
        echo -e "Para virar root execute \033[1;31msudo su\033[0m"
        pack
        exit
        else
        clear
        echo -e "Vc nao esta como usuario root, nem com seus direitos (sudo)\nPara virar root execute \033[1;31msu\033[0m e digite su pass root"
        pack
        exit
        fi
fi

if [ -d /etc/VpsPackdir ]
then
echo ""
else
mkdir /etc/VpsPackdir
fi

if [ -d /etc/VpsPackdir/senha ]
then
echo ""
else
mkdir /etc/VpsPackdir/senha
fi

if [ -d /etc/VpsPackdir/limite ]
then
echo ""
else
mkdir /etc/VpsPackdir/limite
fi

if [ -d /etc/VpsPackdir/date ]
then
echo ""
else
mkdir /etc/VpsPackdir/date
fi

if [ -d /etc/VpsPackdir/UsuariosADM ]
then
echo ""
else
mkdir /etc/VpsPackdir/UsuariosADM
fi
clear
echo -e "\033[1;37m VpsPacket © Script modificado por: \033[2;32mManahkl KB \033[0m"
echo -e "\033[1;37mEscoja las opciones:    \033[1;37mPara Salir Ctrl + C\033[1;34m
[1] Usercreate \033[2;36m(Crear users para SSH y OpenVPN)\033[1;34m
[2] UserRedefine \033[2;36m(Opcion para mudanzas de usuario)\033[1;34m
[3] TransferirUsers \033[2;36m(Copiar usuarios para utros servidores)\033[1;34m
[4] DetalleUsuario \033[2;36m(Mostrar informacion de un unico usuario !!)\033[1;34m
[5] DetalleUsuarios \033[2;36m(Mostrar informacion de usuarios activos !!)\033[1;34m
[6] Usersinactive \033[2;36m(Mostrar informacion de usuarios inactivos!!)\033[1;34m
[7] speedtest \033[2;36m(Tester de conexion [velocidade de banda])\033[1;34m
[8] SystemDetalles \033[2;36m(Detalles sobre el Sistema)\033[1;34m
[9] graphicsystem \033[2;36m(Detalles sobre  VpsPack)\033[1;34m
[10] Ayuda \033[2;36m(Mostrar un grafico con informacion del sistema)\033[1;34m
[11] block \033[2;36m(Bloquear un determinado IP)\033[1;34m
[12] desblock \033[2;36m(Desbloquear un determinado IP)\033[1;34m
[13] add-host \033[2;36m(Adicionar un host)\033[1;34m
[14] firewall-block \033[2;36m(Reglas iptables block torrent, icmp [RISCOS])\033[1;34m
[15] ResetFirewall \033[2;36m(Retira todas las reglas iptables [RISCOS])\033[1;34m
[16] backupusers \033[2;36m(Backup de usuarios para reinstalacion futura)\033[1;34m
[17] restusers \033[2;36m(Restaurar usuarios desde el backup)\033[1;34m
[18] banner \033[2;36m(Banner mensajes en ssh)\033[1;34m
read -p "[1-10]: " opcao

case $opcao in
 1)
  Usercreate
  read -n1 -r -p " Pressione uma tecla para Abrir novamente o VpsPack..."
  VpsPack;;
 2)
  UserRedefine
  read -n1 -r -p " Pressione uma tecla para Abrir novamente o VpsPack..."
  VpsPack;;
 3)
  transferirusers
  read -n1 -r -p " Pressione uma tecla para Abrir novamente o VpsPack..."
  VpsPack;;
 4)
  detalhesuser
  read -n1 -r -p " Pressione uma tecla para Abrir novamente o VpsPack..."
  VpsPack;;
 5)
  detalhesusers
  read -n1 -r -p " Pressione uma tecla para Abrir novamente o VpsPack..."
  VpsPack;;
  6)
  Usersinative
  read -n1 -r -p " Pressione uma tecla para Abrir novamente o VpsPack..."
  VpsPack;;
 7)
  speedtest
  read -n1 -r -p " Pressione uma tecla para Abrir novamente o VpsPack..."
  VpsPack;;
 8)
  systemdetalhes
  read -n1 -r -p " Pressione uma tecla para Abrir novamente o VpsPack..."
  VpsPack;;
 9)
  htop
  read -n1 -r -p " Pressione uma tecla para Abrir novamente o VpsPack..."
  VpsPack;;
 10)
  Ajuda
  read -n1 -r -p " Pressione uma tecla para Abrir novamente o VpsPack..."
  VpsPack;;
 11)
  Mas
  read -n1 -r -p " Pressione uma tecla para Abrir novamente o VpsPack..."
  VpsPack;;
 *)
  id > /dev/null 2> /dev/null
esac
